extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/get-url")
            #error
                if error
                    p.text-danger Error!!!

            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Please masukan URL Facebook

            //-input email
            label( for="inputEmail" class="sr-only") URL Facebook
            input(type="text" name="facebook"  class="form-control" placeholder="URL Facebook" required autofocus)


            //-signIn button
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Submit

            - var pClasses=['mt-5', 'mb-3', 'text-muted'];
            p(class=pClasses) &copy; 2021